<% model = [local_assigns[:commentable], comment].compact %>
<%= form_with model: model,
  id: dom_id_for_records(*model),
  data: local_assigns[:data],
  class: [" "] + Array.wrap(local_assigns[:class]) do |form| %>
  <div style="padding: 16px 0; margin: 0 16px;">
    <% if form.object.errors.any? %>
      <div class="alert alert-danger">
        <% form.object.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    <% end %>
    <%= form.text_area :body, placeholder: "Add a comment", id: "#{dom_id_for_records(*model)}_body", style: "width: 100%; border-radius: 4px; border: 1px solid #c2c2c2; padding: 8px 12px; color: rgb(17, 24, 39); font-size: 16px;" %>
    <div style="display: flex; justify-content: space-between; align-items: center;">
      <%= form.submit class: "button button-primary" %>
      <%= link_to "Cancel", comment, class: "button button-link" if form.object.persisted? %>
    </div>
  </div>
<% end %>

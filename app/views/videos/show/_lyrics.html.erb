<div class="video-info-lyrics" style="padding: 16px;" data-controller="toggle">
  <div class="detail-item-heading-lyrics" style="padding: 16px;">
    <h4>Lyrics</h4>
  </div>
  <div style="display: flex; justify-content: center; gap: 10px;">
    <%= button_tag type: "button",
                        class: "button",
                        data: { action: "toggle#toggleLyricsSpanish" } do %>
      Spanish
    <% end %>
    <%= button_tag type: "button",
                        class: "button",
                        data: { action: "toggle#toggleLyricsEnglish" } do %>
      English
    <% end %>
  </div>
  <div class="detail-column-lyrics" style= "padding: 16px;">
    <div data-toggle-target="lyricsEs">
      <%= simple_format(@video.song.lyrics) %>
    </div>
    <div class="isHidden" data-toggle-target="lyricsEn">
      <%= simple_format(@video.song.lyrics_en) %>
    </div>
  </div>
</div>

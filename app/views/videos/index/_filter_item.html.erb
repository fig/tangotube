<div class="filter-item">
<label>
<%= title.to_s.titleize %>
</label>
  <%= select_tag title.to_s,
        options_for_select([["Select All #{title.to_s.titleize + 's'}", "all"]] + model,
          params[title.to_s].presence || "all"),
            data: { action: "filter#filter", "filter-target": "filter", "slimselect-target": "field", controller:'slimselect' } %>
</div>

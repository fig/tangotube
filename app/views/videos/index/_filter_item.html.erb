<div class="filter-item" data-controller='select2'>
<label>
<%= title.to_s.titleize %>
</label>
  <%= select_tag title.to_s,
        options_for_select([["Select All #{title.to_s.titleize + 's'}", "all"]] + model,
          params[title.to_s].presence || "all"),
            class: "content-search",
            data: { action: "filter#filter", "filter-target": "filter" } %>
</div>

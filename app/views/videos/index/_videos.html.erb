<% if (@videos_paginated.empty?) %>
    <p style="font-weight:bold">No videos found.</p>
    Try a different search word or click on the TangoTube logo to reset.
  <% else %>
    <% @videos_paginated.each do |video| %>
      <%= active_link_to current_page_params.merge(youtube_id: video.youtube_id),
                {class: "video", active: :exact} do %>

        <div class="video-thumbnails">
          <%= image_tag("http://img.youtube.com/vi/#{video.youtube_id}/mqdefault.jpg",
                class: 'thumbnail') %>
        </div>
        <div class="video-videotypes">
          <%= video.videotype.try(:name) %>
        </div>
        <div class="video-titles">
          <%= video.try(:spotify_track_name) %>
        </div>
        <div class="video-artists">
          <%= video.try(:spotify_artist_name) %>
        </div>
        <div class="video-genres">
          <%= video.song.try(:genre) %>
        </div>
        <div class="video-leaders">
          <%= video.leader.try(:name) %>
        </div>
        <div class="video-followers">
          <%= video.follower.try(:name) %>
        </div>
        <div class="video-events">
          <%= video.event.try(:name) %>
        </div>
        <div class="video-channels">
          <%= video.channel %>
        </div>
        <div class="video-view_counts">
          <%= video.view_count %>
        </div>
        <div class="video-upload_dates">
          <%= video.upload_date %>
        </div>
    <% end %>
      <hr>
  <% end %>
<% end %>

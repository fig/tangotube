<%= "#{@videos_filtered.count} Results" %>
<div data-controller="toggle">
  <button type='submit' data-action="toggle#toggle" class="filter_button">
    <i class="fas fa-filter fa-lg" aria-hidden="true"></i>
  </button>

  <div class="hidden" data-toggle-target="toggleable">

    <div class="filter_container" data-controller="filter">
      <div data-controller="choices" data-item-select-text=" " data-should-sort="false" data-should-sort-items="false" data-position="down">
        <div class="filter_item">
          <label>Type</label>
          <datalist data-choices-target="options">
            <%= options_for_select([["Select All #{@videotypes.count} Types", "all"]] + @videotypes,
              params[:videotype].presence || "all") %>
          </datalist>
          <%= select_tag :videotype, 
                options_for_select(@videotypes),
                data: { "choices-target": "select", action: "filter#filter", "filter-target": "filter" } %>
        </div>
      </div>

      <div data-controller="choices" data-item-select-text=" " data-should-sort="false" data-should-sort-items="false" data-position="down">
        <div class="filter_item">
          <label>Genre</label>
          <datalist data-choices-target="options">
            <%= options_for_select([["Select All #{@genres.count} Genres", "all"]] + @genres,
              params[:genre].presence || "all") %>
          </datalist>
          <%= select_tag :genre, 
                options_for_select(@genres),
                data: { "choices-target": "select", action: "filter#filter", "filter-target": "filter" } %>
        </div>
      </div>

      <div data-controller="choices" data-item-select-text=" " data-should-sort="false" data-should-sort-items="false" data-position="down">
        <div class="filter_item">
          <label>Leader</label>
          <datalist data-choices-target="options">
            <%= options_for_select([["Select All #{@leaders.count} leaders", "all"]] + @leaders,
              params[:leader].presence || "all") %>
          </datalist>
          <%= select_tag :leader, 
                options_for_select(@leaders),
                data: { "choices-target": "select", action: "filter#filter", "filter-target": "filter" } %>
        </div>
      </div>

      <div data-controller="choices" data-item-select-text=" " data-should-sort="false" data-should-sort-items="false" data-position="down">
        <div class="filter_item">
          <label>Follower</label>
          <datalist data-choices-target="options">
            <%= options_for_select([["Select All #{@followers.count} followers", "all"]] + @followers,
              params[:follower].presence || "all") %>
          </datalist>
          <%= select_tag :follower, 
                options_for_select(@followers), 
                multiple: false, 
                size: 10,
                data: { "choices-target": "select", action: "filter#filter", "filter-target": "filter" } %>
        </div>
      </div>

      <div data-controller="choices" data-item-select-text=" " data-should-sort="false" data-should-sort-items="false" data-position="down">
        <div class="filter_item">
          <label>Event</label>
          <datalist data-choices-target="options">
            <%= options_for_select([["Select All #{@events.count} events", "all"]] + @events,
              params[:event].presence || "all") %>
          </datalist>
          <%= select_tag :event, 
                options_for_select(@events),
                data: { "choices-target": "select", action: "filter#filter", "filter-target": "filter" } %>
        </div>
      </div>

      <div data-controller="choices" data-item-select-text=" " data-should-sort="false" data-should-sort-items="false" data-position="down" data-render-choice-limit="1">
        <div class="filter_item">
          <label>Channel</label>
          <datalist data-choices-target="options">
            <%= options_for_select([["Select All #{@channels.count} channels", "all"]] + @channels,
              params[:channel].presence || "all") %>
          </datalist>
          <%= select_tag :channel, 
                options_for_select(@channels),
                data: { "choices-target": "select", action: "filter#filter", "filter-target": "filter" } %>
        </div>
      </div>

    </div>
  </div>
</div>
</div>
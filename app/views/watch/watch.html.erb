<div class="grid-container">

  <div class="video-responsive">
      <iframe width="100%" height="600px" scrolling="no" src="https://www.youtube.com/embed/b3cHU8RUuwI" allowfullscreen>
      </iframe>
  </div>
  <div class="video_info">

    <div class="detail-section-label">
      <h1>Video Info</h1>
    </div>

    <div class="detail-row">
      <div class="detail-column">
        <div class="detail-item-heading">
          Title
        </div>
      </div>
      <div class="detail-column">
        <div class="detail-item-value">
          <%= format_value(@active_video.title) %>
        </div>
      </div>
    </div>

    <div class="detail-row">
      <div class="detail-column">
        <div class="detail-item-heading">
          Description
        </div>
      </div>
      <div class="detail-column">
        <div class="detail-item-value">
          <%= format_value(@active_video.description) %>
        </div>
      </div>
    </div>

    <div class="detail-row">
      <div class="detail-column">
        <div class="detail-item-heading">
          Type
        </div>
      </div>
      <div class="detail-column">
        <div class="detail-item-value">
          <%= format_value(@active_video.videotype.try(:name)) %>
        </div>
      </div>
    </div>

    <div class="detail-row">
      <div class="detail-column">
        <div class="detail-item-heading">
          View Count
        </div>
      </div>
      <div class="detail-column">
        <div class="detail-item-value">
          <%= format_value(@active_video.view_count) %>
        </div>
      </div>
    </div>

    <div class="detail-row">
      <div class="detail-column">
        <div class="detail-item-heading">
          Duration
        </div>
      </div>
      <div class="detail-column">
        <div class="detail-item-value">
          <%= format_value(@active_video.length ) %>
        </div>
      </div>
    </div>

    <div class="detail-row">
      <div class="detail-column">
        <div class="detail-item-heading">
          Performance Number
        </div>
      </div>
      <div class="detail-column">
        <div class="detail-item-value">
          value
        </div>
      </div>
    </div>

    <div class="detail-row">
      <div class="detail-column">
        <div class="detail-item-heading">
          Channel
        </div>
      </div>
      <div class="detail-column">
        <div class="detail-item-value">
          <%= format_value(@active_video.channel) %>
        </div>
      </div>
    </div>

    <div class="detail-section-label">
      <h1>Performers</h1>
    </div>

    <div class="detail-row">
      <div class="detail-column">
        <div class="detail-item-heading">
          Leader
        </div>
      </div>
      <div class="detail-column">
        <div class="detail-item-value">
          <%= format_value(@active_video.leader.try(:name)) %>
        </div>
      </div>
    </div>

    <div class="detail-row">
      <div class="detail-column">
        <div class="detail-item-heading">
          Follower
        </div>
      </div>
      <div class="detail-column">
        <div class="detail-item-value">
          <%= format_value(@active_video.follower.try(:name)) %>
        </div>
      </div>
    </div>

    <div class="detail-section-label">
      <h1>Music</h1>
    </div>

    <div class="detail-row">
      <div class="detail-column">
        <div class="detail-item-heading">
          Track
        </div>
      </div>
      <div class="detail-column">
        <div class="detail-item-value">
          <%= format_value(@active_video.song.try(:title).titleize) %>
        </div>
      </div>
    </div>

    <div class="detail-row">
      <div class="detail-column">
        <div class="detail-item-heading">
          Genre
        </div>
      </div>
      <div class="detail-column">
        <div class="detail-item-value">
          <%= format_value(@active_video.song.try(:genre).titleize) %>
        </div>
      </div>
    </div>


    <div class="detail-row">
      <div class="detail-column">
        <div class="detail-item-heading">
          Singer
        </div>
      </div>
      <div class="detail-column">
        <div class="detail-item-value">
          <%= format_value(@active_video.song.try(:artist_2).titleize) %>
        </div>
      </div>
    </div>

    <div class="detail-section-label">
      <h1>Event Info</h1>
    </div>

    <div class="detail-row">
      <div class="detail-column">
        <div class="detail-item-heading">
          Title
        </div>
      </div>
      <div class="detail-column">
        <div class="detail-item-value">
        <%= format_value(@active_video.event.try(:name)) %>
        </div>
      </div>
    </div>

    <div class="detail-row">
      <div class="detail-column">
        <div class="detail-item-heading">
          Artist
        </div>
      </div>
      <div class="detail-column">
        <div class="detail-item-value">
          <%= format_value(@active_video.song.try(:artist).titleize) %>
        </div>
      </div>
    </div>

    <div class="detail-row">
      <div class="detail-column">
        <div class="detail-item-heading">
          Singer
        </div>
      </div>
      <div class="detail-column">
        <div class="detail-item-value">
          value
        </div>
      </div>
    </div>

  </div>
  <div class="footer">
  </div>
</div>

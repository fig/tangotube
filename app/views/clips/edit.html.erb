<h1>Editing clip</h1>
<%= turbo_frame_tag @clip do %>
  <%= render "form", clip: @clip %>
  <br>
  <div class="row">
    <sl-button href="<%= watch_path(v: @clip.video.youtube_id, start: @clip.start_seconds, end: @clip.end_seconds, speed: @clip.playback_rate) %>">
      Show This Clip
    </sl-button>
    <%= button_to "Destroy", video_clip_path(@clip), method: :delete,  form: { data: { turbo_confirm: "Are you sure?" } }, class: "button button--danger" %>
    <%= link_to "Back to clips", clips_path %>
  </div>
<% end %>

<div class="sessions-new-body">
  <div class="sessions-new-container" style="background: var(--sl-color-gray-300); border: none;">
    <div class="sessions-new-header-container">
      <h3>Forgot your password?</h3>
    </div>
    <div class="sessions-new-form-container">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :email, style: "color: var(--sl-color-gray-900)"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="actions" >
          <%= f.submit "Send me reset password instructions", style: "border: none;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

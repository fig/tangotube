<%= turbo_frame_tag "banner" do %>
  <% if session[:banner_closed].nil? %>
    <div class="banner">
      <%= video_tag "Tango Blues.mp4",
        class: "banner__video",
        controls: false,
        type: 'video/mp4',
        poster: "video-poster.jpg",
        preload: true,
        autoplay: true,
        loop: true,
        muted: true,
        controls: false,
        autobuffer: true,
        playsinline: true %>
      <div class="banner__card">
        <h1>The new way to <br/>
          watch Tango</h1>
        <h2>
          Explore <b>Tango History</b><br/>
          Learn the <b>Lyrics & Orchestras</b><br/>
          Watch <b>Without Ads</b><br/>
        </h2>
        <sl-button
      href="<%= new_user_registration_path %>"
      class="primary-button">
          Try it Now
        </sl-button>
      </div>
      <sl-animation name="fadeInDown" easing="easeInOutSine" duration="3000" play>
        <i class="fa-solid fa-angle-down banner__icon"></i>
      </sl-animation>
      <%= button_to banner_path(banner_closed: true), class: "banner__close" do %>
        <sl-icon name="x-lg" style="font-size: 32px">
        </sl-icon>
      <% end %>
    </div>
  <% end %>
<% end %>

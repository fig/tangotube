<div class="right">
  <sl-dropdown>
    <sl-avatar
      slot="trigger"
      image="<%= avatar_url_for(current_user) %>"
      label="user_avatar"
      style="--size: 32px;">
    </sl-avatar>
    <sl-menu>
      <% if user_signed_in? %>
        <%= link_to edit_user_registration_path do %>
          <sl-menu-item>Edit Profile</sl-menu-item>
        <% end %>
        <%= button_to destroy_user_session_path, method: :delete, style: "margin: 0; gap: 0px;" do %>
          <sl-menu-item>Sign Out</sl-menu-item>
        <% end %>
      <% else %>
        <%= link_to new_user_session_path do %>
          <sl-menu-item>Login</sl-menu-item>
        <% end %>
        <%= link_to new_user_registration_path do %>
          <sl-menu-item>Sign Up</sl-menu-item>
        <% end %>
      <% end %>
    </sl-menu>
  </sl-dropdown>
</div>

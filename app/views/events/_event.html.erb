<sl-card class="event__card" id="<%= dom_id event %>">
  <%= link_to event do %>
    <%= image_tag event_avatar(event) %>
  <% end %>
  <%= link_to event do %>
    <%= event.title %>
  <% end %>
  <div>
    <%= "#{event.city}, #{event.country}" %>
  </div>
  <div>
    <%= "#{event.videos_count} Total Videos" %>
  </div>
</sl-card>
